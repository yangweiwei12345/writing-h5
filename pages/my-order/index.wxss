page {
  height: 100%;
}
.container {
  min-height: 100%;
  background-color: #f6f6f6;
}

.order-list {
  margin: 0 28rpx 24rpx 28rpx;
  padding: 0 22rpx;
  background: #FFFFFF;
  box-shadow: 0px -1px 3px 0px rgba(26, 26, 26, 0.15);
  border-radius: 14rpx;
}
.order-list .order-item {
  height: 224rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-list .order-item image {
  width: 254rpx;
  height: 180rpx;
  background-color: #e5e5e5;
}
.order-content {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
.order-content .order-title {
  font-size: 16px;
  font-family: SourceHanSansCN;
  font-weight: 500;
  color: #333333;
  display: flex;
}

.order-content .order-title .order-title-num {
  color: #1A1A1A;
}
.order-content .order-sub-title {
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ED1843;
  margin-top: 16rpx;
  margin-bottom: 52rpx;

  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  -webkit-line-clamp: 1;
}
.order-content .order-desc {
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FA5767;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.van-tabs__scroll {
  background-color: transparent !important;
}