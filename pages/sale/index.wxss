page {
  height: 100%;
}
.container {
  min-height: 100%;
  background-color: #f6f6f6;
}

/* 标题 */
.title {
  display: flex;
  justify-content: space-between;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #333333;
  border-left: 4rpx solid #FD3345;
  padding-left: 26rpx;
}

.opt-list {
  display: flex;
}
.opt-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 46rpx 0;
}
.opt-item-img {
  width: 94rpx;
  height: 94rpx;
}
.opt-item-text {
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  margin-top: 20rpx;
}

.mt-18 {
  margin-top: 36rpx;
}

.mt-32 {
  margin-top: 64rpx;
}


.tj-container {
  background-color: #fff;
  margin: 0 20rpx;
  padding: 50rpx 52rpx;
  border-radius: 12rpx;
  box-shadow: 0px 0px 7px 0px rgba(178, 7, 24, 0.2);
}
.tj-box {
}
.tj-item {
  display: inline-block;
  width: 50%;
}
.tj-title {
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
}
.tj-value {
  font-size: 28px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333333;
  margin-top: 22rpx;
  height: 28px;
}


.tj-img-container {
  background-color: #fff;
  padding: 40rpx 72rpx;
  box-shadow: 0px 0px 7px 0px rgba(178, 7, 24, 0.2);
}
.echarts-container {
  width: 100%;
  height: 600rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}