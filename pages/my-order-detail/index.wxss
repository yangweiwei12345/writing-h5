page {
  height: 100%;
}
.container {
  min-height: 100%;
  background-color: #f6f6f6;
}

.addr-container {
  background: #FFFFFF;
  box-shadow: 0px -1px 4px 0px rgba(26, 26, 26, 0.15);
  padding: 0 46rpx;
}

.addr-item {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
}
.addr-item-smart {
  font-size: 14px;
  color: #666;
  margin-left: 70rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #f4f4f4;
}

.show-more {
  text-align: center;
  font-size: 14px;
  color: #888;
  height: 60rpx;
  line-height: 60rpx;
}
.br-b {
  border-bottom: 1px solid #ededed;
}

.addr-item .addr-item-img {
  width: 60rpx;
  height: 58rpx;
  margin-right: 10rpx;
}

.addr-item-info {
  flex: 1;
}
.addr-item-info .addr-item-name {
  display: flex;
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333333;
  margin-bottom: 12rpx;
}
.addr-item-info .addr-item-phone {
  color: #999;
  margin-left: 40rpx;
}
.addr-item-info .addr-item-dec {
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333333;
}
.addr-item-info .addr-item-time {
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  margin-top: 16rpx;
}

.order-list {
  margin: 22rpx 28rpx 24rpx 28rpx;
  padding: 0 22rpx;
  padding-bottom: 24rpx;
  background: #FFFFFF;
  box-shadow: 0px -1px 3px 0px rgba(26, 26, 26, 0.15);
  border-radius: 14rpx;
}
.order-list .order-item {
  height: 224rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-list .order-item image {
  width: 254rpx;
  height: 180rpx;
  background-color: #e5e5e5;
}
.order-content {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
.order-content .order-title {
  font-size: 16px;
  font-family: SourceHanSansCN;
  font-weight: 500;
  color: #333333;
  display: flex;
}

.order-content .order-title .order-title-num {
  color: #1A1A1A;
}
.order-content .order-sub-title {
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ED1843;
  margin-top: 16rpx;
  margin-bottom: 52rpx;

  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  -webkit-line-clamp: 1;
}
.order-content .order-desc {
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FA5767;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-item-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  margin-top: 24rpx;
}
