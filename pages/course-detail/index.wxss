page {
  height: 100%;
}
.container {
  min-height: 100%;
  background-color: #f6f6f6;
}

.lock-container {
  padding: 20rpx 60rpx;
  margin-bottom: 50rpx;
}

.lock-container .lock-back {
  width: 100%;
  height: 134rpx;
}

.lock-progress {
  position: relative;
  height: 0;
}

.lock-progress image {
  position: absolute;
  bottom: 10rpx;
  right: -30rpx;
  width: 80rpx;
  height: 80rpx;
}
.lock-progress .lock-progress-text {
  font-size: 13px;
  font-family: ZCOOLtongtong;
  font-weight: 400;
  color: #333333;
  position: absolute;
  bottom: -30rpx;
  right: -20rpx;
}

.list {
  margin: 0 26rpx;
}
.list-item {
  position: relative;
  height: 320rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.list-item .list-item-img {
  width: 100%;
  height: 320rpx;
}

.list-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  background-color: rgba(0, 0, 0, .5);
}
.list-mask .list-mask-text {
  font-size: 35px;
  font-family: HappyZcool;
  font-weight: normal;
  color: #FFFFFF;
  margin-right: 30rpx;
  margin-bottom: 26rpx;
}
.list-mask image {
  width: 118rpx;
  height: 140rpx;
  margin-bottom: 38rpx;
  margin-right: 26rpx;
}