page {
  height: 100%;
}
.container {
  min-height: 100%;
  background-color: #f6f6f6;
}

/** 顶部个人信息栏 */
.content-header {
  height: 386rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 4px 0px rgba(214, 5, 28, 0.2);
  border-radius: 7px;
  padding: 26rpx;
  margin: 28rpx;
}
.content-header-top {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f3f3f3;
}

.content-header-top .content-header-top-img {
  width: 150rpx;
  height: 164rpx;
  /* background-image: url('../../resource//my/header.png'); */
  background-size: 100%;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.content-header-top-img-b {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.content-header-top-img-t {
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  margin-bottom: 5rpx;

}
.content-header-top .content-header-top-box {
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 10rpx;
}
.content-header-top-info {
}
.content-header-top .content-header-top-box .header-box-left {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.header-box-left .header-box-left-name {
  font-size: 12px;
  font-family: SourceHanSansCN;
  font-weight: 500;
  color: #333333;
}
.header-box-left image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 26rpx;
}

.content-header-top .content-header-top-box .content-header-top-info .header-box-right {
  display: flex;
  font-size: 10px;
  font-family: SourceHanSansCN;
  font-weight: 500;
  color: #999999;
}
.header-box-right .header-box-right-age {
  margin-right: 20rpx;
}
.header-box-right .header-box-right-level {}

.content-header-top .content-header-top-box > .header-box-right {
  width: 48rpx;
  height: 62rpx;
  margin-left: 40rpx;
}

.content-header-top .content-header-top-share {
  width: 74rpx;
  height: 74rpx;
}
.content-header-top button::after {
  border: none !important;
}

.content-header-bottom {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 240rpx;
}
.content-header-bottom-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.content-header-bottom-item image {
}

.content-header-bottom-item .image1 {
  width: 54rpx;
  height: 54rpx;
}

.content-header-bottom-item .image2 {
  width: 50rpx;
  height: 54rpx;
}

.content-header-bottom-item .image3 {
  width: 54rpx;
  height: 46rpx;
}

.content-header-bottom-item .image4 {
  width: 50rpx;
  height: 46rpx;
}
.content-header-bottom-item .content-header-bottom-item-title {
  font-size: 12px;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #999;
  margin-top: 18rpx;
  margin-bottom: 12rpx;
}
.content-header-bottom-item .content-header-bottom-item-num {
  display: flex;
  font-size: 19px;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #333333;
}
.content-header-bottom-item .content-header-bottom-item-unit {
  font-size: 10px;
  padding-top: 17rpx;
}


/** 作业列表 */

.work-container {
  background-color: #fff;
  box-shadow: 0px 0px 4px 0px rgba(78, 78, 78, 0.2);
}

.work-tab-class {
}
.work-tab-active-class {
  font-size: 14px;
  color: #EE1843;
}
.work-list {
  margin: 0 28rpx;
  padding-bottom: 180rpx;
}
.work-list-item {
  background: #FFFFFF;
  box-shadow: 0px 1px 7px 0px rgba(67, 65, 66, 0.2);
  border-radius: 3px;
  overflow: hidden;
  position: relative;
  margin-bottom: 30rpx;
}
.work-list-item .work-item-img {
  width: 100%;
  height: 338rpx;
  background-color: #e6e6ee;
}
.work-list-item .list-info {
  padding: 0 16rpx 16rpx 16rpx;
}
.work-list-item .list-info .list-info-title {
  font-size: 10px;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #333333;

  line-height: 22rpx;
  height: 44rpx;
  overflow: hidden;
  /* white-space: nowrap; */
  text-overflow:ellipsis;
  -webkit-line-clamp: 2;
}
.work-list-item .list-info .list-info-box {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.work-list-item .list-info .list-info-box .list-info-text {
  font-size: 10px;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #333333;
  margin: 0 12rpx;
}
.work-list-item .list-info .list-info-box .list-info-time {
  font-size: 10px;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #999999;
}
.work-list-item .list-info .list-info-box image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #e5e5e5;
}
.work-list-item .list-info-like {
  display: flex;
  align-items: center;
  height: 36rpx;
  border-radius: 36rpx;
  padding: 6rpx 12rpx;
  position: absolute;
  top: 18rpx;
  right: 20rpx;
  background-color: #f9f9f9;
}
.work-list-item .list-info-like image {
  width: 26rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.work-list-item .list-info-like .list-info-like-num {
  font-size: 10px;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #666666;
}
.work-list-item .list-info-pj {
  width: 98rpx;
  height: 74rpx;
  position: absolute;
  right: 20rpx;
  top: 240rpx;
}
